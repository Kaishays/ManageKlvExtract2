<Window x:Class="ManageKlvExtract.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManageKlvExtract"
        mc:Ignorable="d"
        Title="KLV Extractor Manager" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FF2B2B2B">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="KLV Extractor Process Manager"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Control Panel -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Name="StartExtractorsButton"
                    Content="Start 3 Extractors"
                    Click="StartExtractorsButton_Click"
                    Padding="15,8"
                    Margin="5"
                    Background="#FF4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"/>
            
            <Button Name="KillAllExtractorsButton"
                    Content="Kill All Extractors"
                    Click="KillAllExtractorsButton_Click"
                    Padding="15,8"
                    Margin="5"
                    Background="#FFF44336"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"/>
            
            <Button Name="RefreshButton"
                    Content="Refresh Stats"
                    Click="RefreshButton_Click"
                    Padding="15,8"
                    Margin="5"
                    Background="#FF2196F3"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"/>
        </StackPanel>
        
        <!-- Main Content -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Process Information -->
            <Border Grid.Column="0" 
                    Background="#FF3C3C3C" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="KLV Extractor Processes"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,15"/>
                    
                    <TextBlock Name="ProcessCountLabel"
                               Text="Running Processes: 0"
                               FontSize="16"
                               Foreground="#FFBBBBBB"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Process Details:"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="White"
                               Margin="0,10,0,5"/>
                    
                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                        <ListBox Name="ProcessListBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="#FFCCCCCC"
                                 FontFamily="Consolas"
                                 FontSize="12"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>
            
            <!-- System Resources -->
            <Border Grid.Column="1" 
                    Background="#FF3C3C3C" 
                    CornerRadius="8" 
                    Padding="15" 
                    Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="System Resources"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               Margin="0,0,0,15"/>
                    
                    <!-- CPU Usage -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="CPU Usage"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                        <ProgressBar Name="CpuProgressBar"
                                     Height="20"
                                     Background="#FF555555"
                                     Foreground="#FF4CAF50"
                                     Margin="0,0,0,5"/>
                        <TextBlock Name="CpuPercentageLabel"
                                   Text="0%"
                                   FontSize="12"
                                   Foreground="#FFBBBBBB"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Memory Usage -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Memory Usage"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                        <ProgressBar Name="MemoryProgressBar"
                                     Height="20"
                                     Background="#FF555555"
                                     Foreground="#FF2196F3"
                                     Margin="0,0,0,5"/>
                        <TextBlock Name="MemoryUsageLabel"
                                   Text="0 MB / 0 MB"
                                   FontSize="12"
                                   Foreground="#FFBBBBBB"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- GPU Usage -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="GPU Usage"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                        <ProgressBar Name="GpuProgressBar"
                                     Height="20"
                                     Background="#FF555555"
                                     Foreground="#FFFF9800"
                                     Margin="0,0,0,5"/>
                        <TextBlock Name="GpuPercentageLabel"
                                   Text="0%"
                                   FontSize="12"
                                   Foreground="#FFBBBBBB"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Additional System Info -->
                    <StackPanel>
                        <TextBlock Text="System Information"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,10,0,5"/>
                        <TextBlock Name="SystemInfoLabel"
                                   Text="Loading..."
                                   FontSize="11"
                                   Foreground="#FFBBBBBB"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="#FF505050" 
                CornerRadius="4" 
                Padding="10,5" 
                Margin="0,20,0,0">
            <TextBlock Name="StatusLabel"
                       Text="Ready"
                       FontSize="12"
                       Foreground="#FFCCCCCC"
                       HorizontalAlignment="Left"/>
        </Border>
    </Grid>
</Window>
